{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/design-system/*": ["./design-system/*"]
    },
    "types": ["node", "react", "react-dom"]
  },
  "include": [
    "components/**/*",
    "design-system/**/*",
    "templates/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".work"
  ]
}
